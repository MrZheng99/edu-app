<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginActivity">
    <TextView
        android:id="@+id/register_title"
        android:textSize="50sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_title"/>

    <TextView
        android:id="@+id/username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_title"
        android:text="@string/username_text"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/username_edit"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_below="@id/register_title"
        android:layout_toEndOf="@id/username_text"
        android:inputType="text" />

    <TextView
        android:id="@+id/password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_text"
        android:text="@string/password_text"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/password_edit"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_below="@id/username_edit"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@id/password_text"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/repeat_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_text"
        android:text="@string/repeat_password_text"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/repeat_password_edit"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_below="@id/password_edit"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@id/password_text"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_below="@id/repeat_password_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/back_to_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_to_login_text"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/register_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_text"
            android:textSize="30sp"/>

    </LinearLayout>
</RelativeLayout>