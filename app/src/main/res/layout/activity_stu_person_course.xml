<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"

    android:orientation="vertical">

    <EditText
        android:id="@+id/personPage_stuClass_addClassText"
        android:layout_width="match_parent"
        android:layout_height="10mm"
        android:alpha="0.3"
        android:gravity="center"
        android:background="@drawable/bg_course_code"
        android:textColor="@android:color/holo_red_dark"
        android:hint="输入班级邀请码"></EditText>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">


    <Button
        android:id="@+id/personPage_stuClass_addClassBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/addcourse"
        android:theme="@android:style/Theme.Translucent"
        android:layout_marginRight="30dp"
        android:text="添加班级">

    </Button>
    <Button
        android:id="@+id/personPage_stuClass_getClassBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/addcourse"
        android:theme="@android:style/Theme.Translucent"

        android:text="查看班级">

    </Button>
</LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="已加入的班级"></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/personPage_stuClass_getClassText"
        android:textStyle="bold"></TextView>
</LinearLayout>