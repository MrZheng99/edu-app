<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    android:padding="20dp">
    <!--静音-->
    <TextView
        android:id="@+id/mult_switch_mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:drawableTop="@drawable/btn_voice_mute"
        android:drawablePadding="5dp"
        android:gravity="center_horizontal"
        android:text="静音"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
    <!--扬声器-->
    <TextView
        android:id="@+id/mult_hand_free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:drawableTop="@drawable/hands_free"
        android:drawablePadding="5dp"
        android:gravity="center_horizontal"
        android:text="扬声器"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
    <!--开启关闭摄像头-->
    <TextView
        android:id="@+id/mult_open_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:drawableTop="@drawable/btn_open_camera"
        android:drawablePadding="5dp"
        android:text="摄像头"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
    <!--切换摄像头-->
    <TextView
        android:id="@+id/mult_switch_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mult_open_camera"
        android:layout_alignStart="@+id/mult_open_camera"
        android:layout_alignParentEnd="true"
        android:drawableTop="@drawable/switch_camera"
        android:drawablePadding="5dp"
        android:gravity="center_horizontal" />
    <!--挂断-->
    <TextView
        android:id="@+id/mult_switch_hang_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mult_hand_free"
        android:layout_centerHorizontal="true"
        android:drawableTop="@drawable/cancel"
        android:drawablePadding="5dp"
        android:gravity="center_horizontal"

        />
</RelativeLayout>