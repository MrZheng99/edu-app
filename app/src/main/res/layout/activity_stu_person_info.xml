<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"

            android:text="用户名"></TextView>

        <EditText
            android:id="@+id/personPage_personInfo_id"
            android:layout_width="200dp"
            android:layout_height="match_parent"

            ></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"

            android:text="姓名"></TextView>

        <EditText
            android:id="@+id/personPage_personInfo_name"

            android:layout_width="200dp"
            android:layout_height="match_parent"


            ></EditText>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:text="性别"></TextView>

        <EditText
            android:id="@+id/personPage_personInfo_sex"
            android:layout_width="200dp"
            android:layout_height="match_parent"

            ></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"

            android:text="年龄"></TextView>

        <EditText
            android:id="@+id/personPage_personInfo_age"
            android:layout_width="200dp"
            android:layout_height="match_parent"

            ></EditText>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"

            android:text="电话号码"></TextView>

        <EditText
            android:id="@+id/personPage_personInfo_phone"
            android:layout_width="200dp"
            android:layout_height="match_parent"

            ></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"

            android:text="qq"></TextView>

        <EditText
            android:id="@+id/personPage_personInfo_qq"
            android:layout_width="200dp"
            android:layout_height="match_parent"

            ></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"

            android:text="住址"></TextView>

        <EditText
            android:id="@+id/personPage_personInfo_address"
            android:layout_width="200dp"
            android:layout_height="match_parent"

            ></EditText>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:id="@+id/personPage_personInfo_oldPasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"

            android:text="原密码"></TextView>

        <EditText
            android:id="@+id/personPage_personInfo_oldPassword"
            android:layout_width="200dp"
            android:password="true"
            android:layout_height="match_parent">

        </EditText>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:id="@+id/personPage_personInfo_newPasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"

            android:text="新密码"></TextView>

        <EditText
            android:id="@+id/personPage_personInfo_newPassword"
            android:layout_width="200dp"
            android:password="true"
            android:layout_height="match_parent"></EditText>
    </LinearLayout>
    <Button
        android:id="@+id/personPage_personInfo_changeBt"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:text="修改资料"></Button>
</LinearLayout>