<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"

            android:text="用户名"></TextView>

        <EditText
            android:id="@+id/personPage_personInfo_id"
            android:layout_width="200dp"
            android:layout_height="match_parent"

            ></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"

            android:text="姓名"></TextView>

        <EditText
            android:id="@+id/personPage_personInfo_name"

            android:layout_width="200dp"
            android:layout_height="match_parent"


            ></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"

            android:text="密码"></TextView>

        <EditText
            android:id="@+id/personPage_personInfo_password"
            android:layout_width="200dp"
            android:layout_height="match_parent"

            ></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="性别"></TextView>

        <EditText
            android:id="@+id/personPage_personInfo_sex"
            android:layout_width="200dp"
            android:layout_height="match_parent"

            ></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"

            android:text="年龄"></TextView>

        <EditText
            android:id="@+id/personPage_personInfo_age"
            android:layout_width="200dp"
            android:layout_height="match_parent"

            ></EditText>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"

            android:text="电话号码"></TextView>

        <EditText
            android:id="@+id/personPage_personInfo_phone"
            android:layout_width="200dp"
            android:layout_height="match_parent"

            ></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"

            android:text="qq"></TextView>

        <EditText
            android:id="@+id/personPage_personInfo_qq"
            android:layout_width="200dp"
            android:layout_height="match_parent"

            ></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"

            android:text="住址"></TextView>

        <EditText
            android:id="@+id/personPage_personInfo_address"
            android:layout_width="200dp"
            android:layout_height="match_parent"

            ></EditText>

    </LinearLayout>

    <Button
        android:id="@+id/personPage_personInfo_changeBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改资料"></Button>
</LinearLayout>