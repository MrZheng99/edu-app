<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="25%"
            android:layout_alignParentLeft="true"
    android:textStyle="bold"
            android:text="题目：">
        </TextView>
        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="75%"
            android:layout_alignParentRight="true"

            android:id="@+id/practicePage_practice_lookexam_question">
        </TextView>
    </androidx.percentlayout.widget.PercentRelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textStyle="bold"

                android:text="我的分数">
            </TextView>
            <TextView

                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/holo_red_dark"
                android:id="@+id/practicePage_practice_lookexam_stuscore">
            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:layout_centerVertical="true"

                android:text="此题满分">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"

                android:textColor="@android:color/holo_red_dark"

                android:id="@+id/practicePage_practice_lookexam_fullscore">
            </TextView>

        </RelativeLayout>

    </LinearLayout>

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="30%"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:textStyle="bold"

            android:text="正确答案：">
        </TextView>
        <TextView

            android:layout_alignParentRight="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="70%"
            android:gravity="center_vertical"

            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/practicePage_practice_lookexam_rightanswer">
        </TextView>

    </androidx.percentlayout.widget.PercentRelativeLayout>
    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="30%"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"

            android:textStyle="bold"
            android:text="我的答案：">
        </TextView>
        <TextView

            android:layout_alignParentRight="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"

            app:layout_widthPercent="70%"
            android:id="@+id/practicePage_practice_lookexam_stuanswer">

        </TextView>

    </androidx.percentlayout.widget.PercentRelativeLayout>

</LinearLayout>